generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Basvuru {
  id               String   @id @default(cuid())
  ogrenciAdSoyad   String
  ogrenciTc        String   @unique
  okul             String
  ogrenciSinifi    String
  ogrenciSube      String   @default("Belirtilmedi")
  kurumSube        String   @default("Rize")
  sinavGunu        String   @default("Belirtilmedi")
  // Rize için sınav seçimi
  sinavSecimi      String?  // Sadece Rize için kullanılacak
  // Sınav giriş belgesi bilgileri (sadece Rize için)
  sinavSaati       String?
  siraNumarasi     String?
  oturum           String?
  sinavSalonu      String?
  sinavAdresi      String?
  sinavTarihi      String?
  digerNotlar      String?
  babaAdSoyad      String
  babaMeslek       String
  babaIsAdresi     String   @default("")
  babaCepTel       String
  anneAdSoyad      String
  anneMeslek       String
  anneIsAdresi     String   @default("")
  anneCepTel       String
  email            String
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt

  @@index([ogrenciTc])
  @@index([email])
  @@index([kurumSube])
}

model Admin {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  name      String
  kurumSube String   @default("Rize")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  @@index([kurumSube])
}
